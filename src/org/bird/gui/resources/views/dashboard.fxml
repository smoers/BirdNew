<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="dashboard" prefHeight="447.0" prefWidth="794.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.bird.gui.controllers.DashboardController">
   <top>
      <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
        <menus>
          <Menu fx:id="menuFile" mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="menuExit" mnemonicParsing="false" text="Exit" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <BorderPane fx:id="mainItemDashboard" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <center>
            <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" pannable="true" BorderPane.alignment="CENTER">
               <content>
                  <FlowPane fx:id="itemsContainer" blendMode="MULTIPLY" hgap="10.0" orientation="VERTICAL" rowValignment="TOP" styleClass="panel_container" stylesheets="@../css/fxcss.css" vgap="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </FlowPane>
               </content>
            </ScrollPane>
         </center>
         <top>
            <ToolBar fx:id="toolbar" styleClass="menu_container" stylesheets="@../css/fxcss.css" BorderPane.alignment="CENTER">
              <items>
                <Button fx:id="buttonLarge" mnemonicParsing="false" styleClass="toolbar" stylesheets="@../css/fxcss.css" text="Large" />
                  <Button fx:id="buttonList" mnemonicParsing="false" text="List" />
              </items>
            </ToolBar>
         </top>
         <right>
            <ScrollPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <content>
                <AnchorPane fx:id="dataSheetPane" minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
              </content>
            </ScrollPane>
         </right>
      </BorderPane>
   </center>
   <bottom>
      <VBox fx:id="bottonPane" alignment="CENTER" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
